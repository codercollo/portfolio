{{template "base" .}}

{{define "main"}}
<!-- Projects Hero -->
<section class="relative py-20 md:py-32 px-6 md:px-12 lg:px-16 bg-[#0d0d0d]">
    <div class="max-w-[1400px] mx-auto text-center">
        <h1 class="font-display text-5xl md:text-6xl lg:text-7xl font-black uppercase tracking-tight mb-5 relative inline-block after:absolute after:bottom-[-10px] after:left-0 after:w-16 after:h-1.5 after:bg-[#00ff88]">
            Projects
        </h1>
        <p class="text-lg md:text-xl text-[#666] mb-12 md:mb-16 max-w-3xl mx-auto leading-relaxed">
            A showcase of recent work spanning web applications, APIs, microservices, and open-source contributions
        </p>
    </div>

    <!-- Animated Scroll Arrow -->
    <div class="absolute bottom-16 left-1/2 -translate-x-1/2">
        <a href="#projects-grid" class="flex flex-col items-center gap-2 animate-bounce">
            <span class="block w-3 h-3 border-b-2 border-r-2 border-[#00ff88] rotate-45 mb-1"></span>
            <span class="block w-3 h-3 border-b-2 border-r-2 border-[#00ff88] rotate-45"></span>
        </a>
    </div>
</section>


<!-- Projects Stairs Grid -->
<section class="py-20 md:py-32 px-6 md:px-12 lg:px-16 bg-[#1a1a1a]">
    <div class="max-w-[1400px] mx-auto">
        {{if .Projects}}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 stairs-grid">
            {{range .Projects}}
            <div class="project-card bg-[#0d0d0d] border-4 border-[#2d2d2d] p-8 md:p-10 transition-all relative group">
                <div class="absolute -top-1 -left-1 -right-1 -bottom-1 bg-gradient-to-br from-[#00ff88] to-[#4d9fff] opacity-0 group-hover:opacity-100 transition-opacity -z-10"></div>

                <span class="font-mono text-xs md:text-sm text-[#00ff88] uppercase tracking-wider mb-4 md:mb-5 block">
                    {{.Role}}
                </span>

                <h3 class="font-display text-2xl md:text-3xl font-bold uppercase tracking-tight mb-3 md:mb-4">
                    {{.Name}}
                </h3>

                <p class="text-[#666] mb-6 md:mb-8 leading-relaxed text-sm md:text-base">
                    {{.Tech}}
                </p>

                <div class="flex flex-wrap gap-3">
                    {{if .LiveURL}}
                    <a href="{{.LiveURL}}" target="_blank" rel="noopener" class="inline-block px-5 md:px-6 py-2.5 md:py-3 bg-transparent border-2 border-white text-white font-mono text-xs md:text-sm font-semibold uppercase tracking-wider transition-all hover:bg-white hover:text-[#0d0d0d] hover:-translate-x-0.5 hover:-translate-y-0.5 hover:shadow-[3px_3px_0_#00ff88]">
                        Live Demo
                    </a>
                    {{end}}

                    {{if .RepoURL}}
                    <a href="{{.RepoURL}}" target="_blank" rel="noopener" class="inline-block px-5 md:px-6 py-2.5 md:py-3 bg-transparent border-2 border-[#666] text-[#666] font-mono text-xs md:text-sm font-semibold uppercase tracking-wider transition-all hover:border-white hover:text-white">
                        GitHub
                    </a>
                    {{end}}
                </div>
            </div>
            {{end}}
        </div>
        {{else}}
        <p class="text-[#666] text-center text-lg md:text-xl">No projects found.</p>
        {{end}}
    </div>
</section>

<!-- CTA Section -->
<section class="py-20 md:py-32 px-6 md:px-12 lg:px-16 bg-[#1a1a1a]">
    <div class="max-w-4xl mx-auto text-center">
        <h2 class="font-display text-4xl md:text-5xl font-black uppercase tracking-tight mb-6 md:mb-8">
            Have a Project in Mind?
        </h2>
        <p class="text-lg md:text-xl text-[#666] mb-10 md:mb-12 leading-relaxed max-w-2xl mx-auto">
            Let's discuss how we can bring your ideas to life with modern technology and creative solutions.
        </p>
        <a href="/contact" class="inline-block px-12 md:px-16 py-5 md:py-6 font-mono text-base md:text-lg font-bold uppercase tracking-wider border-4 transition-all bg-gradient-to-r from-[#00ff88] to-[#4d9fff] text-[#0d0d0d] border-[#00ff88] hover:from-[#4d9fff] hover:to-[#00ff88] hover:text-white hover:-translate-x-1 hover:-translate-y-1 hover:shadow-[6px_6px_0_white]">
            Get In Touch
        </a>
    </div>
</section>

<!-- Extra CSS for stairs layout -->
<style>
.stairs-grid .project-card:nth-child(3n+2) {
    transform: translateY(1.5rem);
}
.stairs-grid .project-card:nth-child(3n+3) {
    transform: translateY(3rem);
}
</style>
{{end}}
