{{template "base" .}}

{{define "main"}}
<!-- Hero Section -->
<section class="relative min-h-[calc(100vh-5rem)] grid grid-cols-1 lg:grid-cols-[1.2fr_1fr] gap-12 lg:gap-20 items-center px-6 md:px-12 lg:px-16 py-16 md:py-20 lg:py-24 max-w-[1400px] mx-auto">
    <div class="hidden lg:block absolute top-0 right-1/2 w-px h-full bg-gradient-to-b from-transparent via-[#00ff88] to-transparent opacity-30"></div>
    
    <div class="flex flex-col justify-center">
        <a href="/" class="inline-block w-fit no-underline group">
            <h1 class="font-display text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-black leading-[0.9] tracking-tighter mb-6 md:mb-8 uppercase text-white transition-colors group-hover:text-[#00ff88]">
                Collins<br>Kimani
            </h1>
        </a>
        
        <p class="text-lg md:text-xl lg:text-2xl leading-relaxed text-[#666] mb-10 md:mb-12 font-light max-w-xl">
           Building <strong class="text-[#00ff88] font-semibold">scalable backend systems</strong> with clean code and reliable architecture. Specializing in Go, APIs solutions.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 md:gap-5">
            <a href="/projects" class="px-8 md:px-10 py-4 md:py-5 font-mono text-sm md:text-base font-bold uppercase tracking-wider border-4 transition-all bg-[#00ff88] text-[#0d0d0d] border-[#00ff88] hover:bg-white hover:border-white text-center">
                View Projects
            </a>
            <a href="/contact" class="px-8 md:px-10 py-4 md:py-5 font-mono text-sm md:text-base font-bold uppercase tracking-wider border-4 transition-all bg-transparent text-white border-white hover:bg-white hover:text-[#0d0d0d] text-center">
                Get In Touch
            </a>
        </div>
    </div>
    
    <div class="hidden lg:flex items-center justify-center">
        <div class="w-full max-w-md aspect-square overflow-hidden transition-transform hover:scale-105">
            <img 
                src="/static/imgs/illustration.png" 
                alt="Backend development illustration" 
                class="w-full h-full object-cover rounded-lg"
            >
        </div>
    </div>

    <!-- Animated Scroll Arrow (raised) -->
    <div class="absolute bottom-16 left-1/2 -translate-x-1/2">
        <a href="#next-section" class="flex flex-col items-center gap-2 animate-bounce">
            <span class="block w-3 h-3 border-b-2 border-r-2 border-[#00ff88] rotate-45 mb-1"></span>
            <span class="block w-3 h-3 border-b-2 border-r-2 border-[#00ff88] rotate-45"></span>
        </a>
    </div>
</section>



<!-- Services Section -->
{{template "services" .}}

<!-- Featured Work Section -->
<section class="bg-[#1a1a1a] py-20 md:py-32 px-6 md:px-12 lg:px-16">
    <div class="max-w-[1400px] mx-auto">
        <h2 class="font-display text-4xl md:text-5xl lg:text-6xl font-black uppercase tracking-tight mb-5 relative inline-block after:absolute after:bottom-[-10px] after:left-0 after:w-16 after:h-1.5 after:bg-[#00ff88]">
            Featured Work
        </h2>
        <p class="text-lg md:text-xl text-[#666] mb-12 md:mb-16 max-w-2xl leading-relaxed">
            Recent projects showcasing technical expertise and creative problem-solving
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 mt-12 md:mt-16">
            <div class="bg-[#0d0d0d] border-4 border-[#2d2d2d] p-8 md:p-10 transition-all hover:-translate-x-1 hover:-translate-y-1 relative group">
                <div class="absolute -top-1 -left-1 -right-1 -bottom-1 bg-gradient-to-br from-[#00ff88] to-[#4d9fff] opacity-0 group-hover:opacity-100 transition-opacity -z-10"></div>
                <span class="font-mono text-xs md:text-sm text-[#00ff88] uppercase tracking-wider mb-4 md:mb-5 block">Web Application</span>
                <h3 class="font-display text-2xl md:text-3xl font-bold uppercase tracking-tight mb-3 md:mb-4">E-Commerce Platform</h3>
                <p class="text-[#666] mb-6 md:mb-8 leading-relaxed text-sm md:text-base">
                    Full-stack marketplace built with Go, PostgreSQL, and HTMX. Real-time inventory management and payment processing.
                </p>
                <a href="/projects" class="inline-block px-6 md:px-8 py-3 bg-transparent border-2 border-white text-white font-mono text-xs md:text-sm font-semibold uppercase tracking-wider transition-all hover:bg-white hover:text-[#0d0d0d] hover:-translate-x-0.5 hover:-translate-y-0.5 hover:shadow-[4px_4px_0_#00ff88]">
                    View Project
                </a>
            </div>
            
            <div class="bg-[#0d0d0d] border-4 border-[#2d2d2d] p-8 md:p-10 transition-all hover:-translate-x-1 hover:-translate-y-1 relative group">
                <div class="absolute -top-1 -left-1 -right-1 -bottom-1 bg-gradient-to-br from-[#00ff88] to-[#4d9fff] opacity-0 group-hover:opacity-100 transition-opacity -z-10"></div>
                <span class="font-mono text-xs md:text-sm text-[#00ff88] uppercase tracking-wider mb-4 md:mb-5 block">Microservices</span>
                <h3 class="font-display text-2xl md:text-3xl font-bold uppercase tracking-tight mb-3 md:mb-4">Microservices Architecture</h3>
                <p class="text-[#666] mb-6 md:mb-8 leading-relaxed text-sm md:text-base">
                    Designed and implemented scalable Go microservices with gRPC and REST APIs. Includes service discovery, load balancing, and centralized logging.
                </p>
                <a href="/projects" class="inline-block px-6 md:px-8 py-3 bg-transparent border-2 border-white text-white font-mono text-xs md:text-sm font-semibold uppercase tracking-wider transition-all hover:bg-white hover:text-[#0d0d0d] hover:-translate-x-0.5 hover:-translate-y-0.5 hover:shadow-[4px_4px_0_#00ff88]">
                    View Project
                </a>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="bg-[#0d0d0d] py-20 md:py-32 px-6 md:px-12 lg:px-16">
    <div class="max-w-4xl mx-auto text-center">
        <h2 class="font-display text-4xl md:text-5xl lg:text-6xl font-black uppercase tracking-tight mb-6 md:mb-8">
            Let's Build Something Amazing
        </h2>
        <p class="text-lg md:text-xl text-[#666] mb-10 md:mb-12 leading-relaxed max-w-2xl mx-auto">
            Have a project in mind? Let's discuss how we can work together to bring your ideas to life.
        </p>
        <a href="/contact" class="inline-block px-10 md:px-12 py-5 md:py-6 font-mono text-base md:text-lg font-bold uppercase tracking-wider border-4 transition-all bg-[#00ff88] text-[#0d0d0d] border-[#00ff88] hover:bg-white hover:border-white hover:-translate-x-1 hover:-translate-y-1 hover:shadow-[6px_6px_0_white]">
            Start a Project
        </a>
    </div>
</section>
{{end}}