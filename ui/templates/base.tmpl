{{define "base"}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{.SiteTitle}} - {{.OwnerName}}</title>
    <link href="/static/css/output.css" rel="stylesheet">
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;700;900&family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body class="bg-[#0d0d0d] text-[#fafafa] font-sans antialiased overflow-x-hidden">
    <div class="page-wrap min-h-screen flex flex-col">
        {{template "nav" .}}
        
        <main class="mt-20 flex-1">
            {{template "main" .}}
        </main>
        
        {{template "footer" .}}
    </div>
</body>
</html>
{{end}}